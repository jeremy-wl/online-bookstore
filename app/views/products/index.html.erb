<div class="row" style="position: relative; right: 45px;">
  <div class="col-md-9 col-md-offset-3">

    <%= will_paginate %>

    <h1 align="center">Listing products</h1>
    <% @products.each_slice(4) do |products| %>
        <div class="row">
          <% products.each do |product| %>

              <div class="col-lg-3 col-md-6 col-xs-12 thumbnail">
                <div class="row">
                  <div class="col-xs-6" style="position: relative; left: 30px;">
                    <%= link_to image_tag(product.image_url, size: '130x160', align: 'right'), product  %>
                  </div>

                  <div class="col-xs-6" style="position: relative; left: 5px;">
                    <h5><%= link_to truncate(strip_tags(product.title), length: 45), product %></h5>
                    <span class="lead"><%= "$#{product.price}" %></span>
                    <%= button_to 'Add to cart', line_items_path(product_id: product.id), remote: true, class: 'btn btn-success' %>
                  </div>
                </div><br/>
              </div>

          <% end %>
        </div>
    <% end %>

    <%= will_paginate %>

  </div>
</div>
