<%= form_for(@order) do |f| %>
    <% if @order.errors.any? %>
        <div id="error_explanation">
          <h2><%=raw t('errors.template.header', count: @order.errors.count, model: t('activerecord.models.order')) %></h2>

          <ul>
            <% @order.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

<div class="row">
  <div class="form-group col-lg-6">
    <%= f.label :name, t('.name') %><br>
    <%= f.text_field :name, size: 40, class: 'form-control' %>
  </div>
  <div class="form-group col-lg-6">
    <%= f.label :address, t('.address') %><br>
    <%= f.text_area :address, rows: 3, cols: 40, class: 'form-control' %>
  </div>
  <div class="form-group col-lg-6">
    <%= f.label :email, t('.email') %><br>
    <%= f.email_field :email, size: 40, class: 'form-control' %>
  </div>
  <div class="form-group col-lg-6">
    <%= f.label :pay_type, t('.pay_type') %><br>
    <%= f.select :pay_type, Order::PAYMENT_TYPES,
                 {prompt: t('.pay_prompt')}, {class: 'form-control'} %>
    <!-- PAYMENT_TYPES is defined in order model -->
  </div>
  <div class="form-group col-lg-6">
    <%= f.submit t('.submit'), class: 'btn btn-success' %>
  </div>
</div>
<% end %>
