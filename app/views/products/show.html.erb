<p>
  <strong>Title:</strong>
  <%= @product.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Image url:</strong>
  <%= @product.image_url %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>
<p>
	<b>Category:</b>
	<% @product.categories.each do |category| %>
	  	<ul>
	  		<li><%= category.name %></li>
	  	</ul>
	<% end %>
</p>
<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
<%= button_to t('.btn_add'), line_items_path(product_id: @product) %>