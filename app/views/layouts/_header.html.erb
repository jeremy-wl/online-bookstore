
<%#= link_to image_tag("logo.png", :size => "50"), store_path %>

<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".navbar-inverse-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>

      <a class="brand" href="/"><%= @page_title || t(".title") %></a>
      <div class="nav-collapse collapse navbar-inverse-collapse">
        <ul class="nav">

          <li><%= link_to "Products", products_path %></li>
          <% if user_signed_in? %>

            <% if current_user.try(:admin?) %>
              <li><%= link_to "All Users", users_path %></li>
            <% end %>

          <% end %>

              <li><%= link_to "Categories", categories_path %></li>

            </ul>
          </li>
        </ul>

        <form class="navbar-search pull-left" action="">
          <input type="text" class="search-query span2" placeholder="Search">
        </form>

        <ul class="nav pull-right">
            <li><%= link_to "My cart", @cart %></li>
            <% if @cart %>
              <li><h5 id="sum"><%= number_to_currency(@cart.total_price) %></h5></li>
            <% end %>                      
            <li><%= link_to "Checkout", new_order_path, method: :get %></li>
            <li class="divider-vertical"></li>

          <% if user_signed_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">My Account <b class="caret"></b></a>

              <ul class="dropdown-menu">
                <% if current_user.try(:admin?) %>
                    <li><%= link_to "All Orders", orders_path %></li>
                <% elsif user_signed_in? %>
                    <li><%= link_to "My Orders", orders_path %></li>
                <% end %>
                <li class="divider"></li>
                <li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
              </ul>

          <% else %>

              <li><%= link_to "Sign in", user_session_path %></li>
              <li>
                <%= link_to "Sign up", new_user_registration_path %>
              </li>
            </li>

          <% end %>  <!-- end user_signed_in? -->
          
            <li>
              <% if @order.nil? %>
                <%= form_tag store_path, class:"pull-right" do %>
                  <%= select_tag 'set_locale', 
                    options_for_select(LANGUAGES, I18n.locale.to_s), onchange: 'this.form.submit()' %>
                  <%= javascript_tag "$('.locale input').hide()" %>
                <% end %>
              <% end %>
            </li>

        </ul>
      </div><!-- /.nav-collapse -->
    </div>
  </div><!-- /navbar-inner -->
</div><!-- /navbar -->
