if ( <%= @cart.line_items.empty? %> )
    window.location.replace("<%= store_url %>");
else
    $('div #cart').html("<%= escape_javascript render(:template => 'carts/show') %>");

$('#sum a').html("<b><%= number_to_currency(@cart.total_price) %></b>")

$('.badge').html(<%= @cart.line_items.count %>)
